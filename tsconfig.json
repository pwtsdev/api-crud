{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../tests-out",
    "baseUrl": "./",
    "paths": {
      "@fixtures/*": ["src/api/fixtures/*"],
      "@helpers/*": ["src/api/helpers/*"],
      "@datafactory/*": ["src/api/datafactory/*"],
      "@requests/*": ["src/api/requests/*"]
    }
  }
}
